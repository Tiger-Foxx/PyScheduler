# PyScheduler - Package Distribution Files

# Core files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Configuration
include pyproject.toml
include setup.py
include MANIFEST.in

# Documentation
recursive-include docs *.md *.rst *.txt
graft docs
prune docs/_build

# Examples (will be available after pip install)
recursive-include examples *.py *.yaml *.yml *.md

# Tests (for development)
recursive-include tests *.py

# Package data
recursive-include pyscheduler *.py
recursive-include pyscheduler *.md

# Exclude development files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log
global-exclude *.pid
global-exclude *.sock
global-exclude .pytest_cache
global-exclude .coverage
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
prune build
prune dist
prune *.egg-info